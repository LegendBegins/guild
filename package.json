{
    "name": "guild",
    "version": "0.0.13",
    "private": true,
    "scripts": {
        "check": "tsc --noEmit",
        "build": "gulp && ls -lah dist",
        "start": "tsx ./server",
        "dev": "tsx watch ./server",
        "reset-db": "tsx ./server/reset_db.ts",
        "pretty-fix": "prettier --write \"{server,sql,test}/**/*.js\"",
        "docker:build": "docker build -t guild .",
        "docker:run": "docker run -p 3000:3000 --env-file .env guild",
        "// ==================": "prod ==================================",
        "deploy:_prod": "npm version patch -m '%s [deploy]' && git push origin --follow-tags",
        "logs:_prod": "fly logs --app rpguild",
        "ssh:_prod": "fly ssh console --app rpguild",
        "// ===================": "staging ==================================",
        "deploy:staging": "fly deploy --config fly.staging.toml --app rpguild-staging",
        "logs:staging": "fly logs --app rpguild-staging",
        "ssh:staging": "fly ssh console --app rpguild-staging"
    },
    "main": "server/index.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/danneu/guild"
    },
    "license": "MIT",
    "dependencies": {
        "@aws-sdk/client-s3": "^3.828.0",
        "@aws-sdk/client-ses": "^3.344.0",
        "@aws-sdk/lib-storage": "^3.828.0",
        "@koa/router": "^13.1.0",
        "autolinker": "1.6.0",
        "bcryptjs": "2.4.3",
        "debug": "3.1.0",
        "discord.js": "^11.5.1",
        "dotenv": "^16.5.0",
        "knex": "^1.0.0",
        "koa": "2.4.1",
        "koa-better-static": "^1.0.5",
        "koa-body": "^6.0.1",
        "koa-bouncer": "^6.0.0",
        "koa-compress": "^2.0.0",
        "koa-conditional-get": "2.0.0",
        "koa-convert": "^1.2.0",
        "koa-etag": "3.0.0",
        "koa-logger": "3.1.0",
        "koa-nunjucks-render": "2.0.1",
        "koa-send": "4.1.0",
        "koa-static": "3.0.0",
        "lodash": "^4.17.15",
        "nodemailer": "4.0.1",
        "nodemailer-ses-transport": "1.5.1",
        "nunjucks": "^3.2.0",
        "pg": "^8.0.0",
        "pg-extra": "^3.0.0",
        "postgres-array": "3.0.4",
        "prettier": "^3.5.3",
        "promise.map": "0.0.2",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "regex-trie": "1.0.4",
        "sharp": "^0.34.2",
        "simple-oauth2": "^1.2.0",
        "tsafe": "^1.8.5",
        "tsx": "^4.20.1",
        "uuid": "^11.1.0",
        "zod": "^3.25.62"
    },
    "devDependencies": {
        "@types/koa": "^2.13.6",
        "@types/koa__router": "^12.0.0",
        "@types/node": "^24.0.0",
        "@types/pg": "^8.10.1",
        "@types/react": "^19.1.7",
        "@types/react-dom": "^19.1.6",
        "del": "^2.2.2",
        "gulp": "^4.0.0",
        "gulp-clean": "^0.4.0",
        "gulp-concat": "^2.4.3",
        "gulp-cssnano": "^2.1.3",
        "gulp-rev": "^9.0.0",
        "gulp-uglify": "^3.0.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.8.3",
        "vinyl-paths": "^2.1.0"
    }
}
